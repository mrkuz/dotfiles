conky.config = {
    alignment = 'top_right',
    own_window = true,
    own_window_transparent = true,
    own_window_argb_visual = true,
    own_window_type = 'desktop',
    update_interval = 1.0,
    double_buffer = true,
    use_xft = true,
    font = 'DejaVu Sans Mono:size=11',
    gap_x = 60,
    gap_y = 60,
    minimum_width = 400,
    default_color = 'grey',
    no_buffers = true,
}

conky.text = [[
Kernel: $alignr $kernel
Uptime: $alignr $uptime
UTC: $alignr $utime
$hr
Load: $alignr $loadavg
CPU usage: $alignr $cpu%
CPU speed: $alignr $freq MHz
Memory used: $alignr $mem of $memmax
Swap used: $alignr $swap of $swapmax
$hr
IP: $alignr ${addr wlp2s0}
Download rate: $alignr ${downspeed wlp2s0}/s (${totaldown wlp2s0})
Upload rate: $alignr ${upspeed wlp2s0}/s (${totalup wlp2s0})
$hr
Root FS free: $alignr ${fs_free /} of ${fs_size /}
Home FS free: $alignr ${fs_free /home} of ${fs_size /home}
Data FS free: $alignr ${fs_free /data/user} of ${fs_size /data/user}
]]
